<div class="message-head">
  <h2>Order Info</h2>
</div>

<div class="message-body">
  <% if (!orderActive || orderActive.length === 0) { %>
  <span class="order-id">You don't have open orders</span>
  <% } else { %>
  <% for (let item in orderActive) { %>
  <p><span class="order-id">Preparing order #<%= orderActive[item].id %>. Ready for pickup in
    <%=  %> minutes.</span></p>
  <% } %>
  <p><span>Thank you!</span></p>
</div>
<div class="message-footer"></div>
<% } %>
