 


 
 
 <!-- Cart on right -->



     <div class="cart-head">
       <p class="restaurant-name">All About Soups</p>
       <p class="restaurant-address">1234 Soup Dr. Toronto, ON M6W9R7</p>
     </div>
     <div class="cart-body">
       <!-- if cart empty -->
       
       <!-- if items are added -->
       <!-- <p class="cart-title">Your Cart</p> -->
       <ul class="cart-item-container">
        <% if(!orderItems) { %>
          <p class="empty-cart">Your cart is currently empty. Please add items.</p>
        <% } else { %>
          <% for (let item in orderItems) { %>

            <li> <span class="cart-item-quantity"><%= orderItems[item].quantity %></span>
              <span class="cart-item"><%= orderItems[item].name %></span>
              <span class="cart-item-price"><%= (orderItems[item].price*.01).toFixed(2) %></span>
            </li>

         <% } %>


        <% } %>

         <div class="cart-footer">
           <div class="cart-total">
             <p>Subtotal</p>
             <p>Tax</p>
             <p>Total</p>
           </div>
           <button class="checkout">Checkout</button>
         </div>
        </div>



